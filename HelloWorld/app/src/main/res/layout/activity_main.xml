<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.minji.helloworld.MainActivity">

    <Button

        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="please press me!!!!!!!"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="8dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="368dp"

        android:layout_height="wrap_content"
        android:text="CheckBox"

        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        tools:layout_editor_absoluteX="215dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="243dp"
        app:layout_constraintRight_toLeftOf="@+id/toggleButton2"
        android:layout_marginRight="33dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RadioButton"
        tools:layout_editor_absoluteY="225dp"
        tools:layout_editor_absoluteX="16dp" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:completionHint="Pick an item"
        android:completionThreshold="2"
        tools:layout_editor_absoluteX="50dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton2" />
</android.support.constraint.ConstraintLayout>
